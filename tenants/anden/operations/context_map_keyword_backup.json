      "description": "Work with Google Drive files",
      "triggers": [
        "drive",
        "google docs",
        "search drive",
        "create doc",
        "upload file",
        "format doc"
      ],
      "workflows": ["google_drive", "google_docs_formatting"],
      "memory": [],
      "tools": [
        "drive_search",
        "drive_read_text",
        "drive_list_recent",
        "drive_list_folders",
        "drive_upload",
        "drive_create_doc",
