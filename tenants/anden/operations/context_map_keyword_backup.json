        "browser",
        "login to",
        "navigate to",
        "click on",
        "fill form",
        "scrape website"
      ],
      "workflows": [],
      "memory": [],
      "tools": [
        "browser_open",
        "browser_login",
        "browser_click",
        "browser_type",
        "browser_read",
        "browser_screenshot",
        "browser_wait",
        "browser_close",
        "browser_list"
