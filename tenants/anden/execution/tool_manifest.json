    {
      "name": "docs_format",
      "description": "Apply formatting, headings, alignment, bullets, insert, and replace operations in a Google Doc.",
      "script": "docs_format.py",
      "input_schema": {
        "type": "object",
        "properties": {
          "doc_id": {
            "type": "string",
            "description": "Google Doc ID to update"
          },
          "operations": {
            "type": "array",
            "description": "List of formatting operations to apply",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "description": "Operation type: replace_text, insert_text, style_text, paragraph_style, bullets"
                },
                "find": { "type": "string" },
                "replace": { "type": "string" },
                "match_case": { "type": "boolean" },
                "text": { "type": "string" },
                "index": { "type": "number" },
                "at_end": { "type": "boolean" },
                "position": { "type": "string", "description": "before or after (for insert_text with match)" },
                "match": { "type": "string" },
                "match_all": { "type": "boolean" },
                "target": { "type": "string", "description": "document (to apply across entire doc)" },
                "range": {
                  "type": "object",
                  "properties": {
                    "start_index": { "type": "number" },
                    "end_index": { "type": "number" }
                  }
                },
                "bold": { "type": "boolean" },
                "italic": { "type": "boolean" },
                "underline": { "type": "boolean" },
                "font_family": { "type": "string" },
                "font_size_pt": { "type": "number" },
                "color_rgb": {
                  "type": "array",
                  "items": { "type": "number" },
                  "description": "RGB array [r,g,b]"
                },
                "background_color_rgb": {
                  "type": "array",
                  "items": { "type": "number" },
                  "description": "RGB array [r,g,b]"
                },
                "named_style_type": {
                  "type": "string",
                  "description": "HEADING_1, HEADING_2, NORMAL_TEXT, etc."
                },
                "alignment": {
                  "type": "string",
                  "description": "START, CENTER, END, JUSTIFIED"
                },
                "line_spacing": { "type": "number" },
                "preset": {
                  "type": "string",
                  "description": "Bullet preset (e.g., BULLET_DISC_CIRCLE_SQUARE, NUMBERED_DECIMAL_NESTED)"
                }
              },
              "required": ["type"]
            }
          }
        },
        "required": ["doc_id", "operations"]
      }
